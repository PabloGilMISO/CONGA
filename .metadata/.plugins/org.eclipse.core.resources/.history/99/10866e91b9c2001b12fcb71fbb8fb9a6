package org.xtext.botGenerator.generator;

import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;

public class NativeFilesReader {
	public static String getUtilsFile() {
		Path utilsPath = Paths.get("pandorabots/utils.txt");
		try {
			String utils = new String(Files.readAllBytes(utilsPath));
			return utils;
		} catch(Exception e) {
			System.out.println("Error while reading the Pandorabots utils file - " + e);
			return "";
		}
	}
}
